---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getWeddingBySlug, weddings } from '../../lib/weddings';

interface Params {
  readonly slug?: string;
}

export function getStaticPaths() {
  return weddings.map((wedding) => ({
    params: { slug: wedding.slug },
  }));
}

const { slug } = Astro.params as Params;

if (!slug) {
  throw new Error('Wedding slug missing from URL.');
}

const wedding = getWeddingBySlug(slug);

if (!wedding) {
  throw new Error(`Unknown wedding slug: ${slug}`);
}

const profileImage = `/wedding/${wedding.slug}/${wedding.slug}-profile.jpg`;
const galleryImages =
  wedding.galleryCount > 0
    ? Array.from({ length: wedding.galleryCount }, (_, index) => `/wedding/${wedding.slug}/${wedding.slug}-${index + 1}.jpg`)
    : [];
---

<BaseLayout
  title={`${wedding.name} — esküvői dekoráció | Mimóza Memories`}
  description={wedding.caption}
>
  <article class="section">
    <header class="hero">
      <div class="hero-layout">
        <div class="hero-copy">
          <p class="eyebrow">Esküvői inspiráció</p>
          <h1>{wedding.name}</h1>
        </div>
        <div class="hero-image-shell">
          <img src={profileImage} alt={wedding.name} class="hero-image" loading="lazy" />
        </div>
      </div>
    </header>

    {galleryImages.length > 0 && (
      <section class="gallery" aria-label={`Esküvői galéria: ${wedding.name}`}>
        <div class="gallery-grid">
          {galleryImages.map((src, index) => (
            <figure class="gallery-item">
              <img src={src} alt={`${wedding.name} esküvői dekoráció — ${index + 1}. kép`} loading="lazy" />
            </figure>
          ))}
        </div>
      </section>
    )}

    <footer class="section-footer">
      <a class="button subtle" href="/wedding">Vissza az esküvőkhöz</a>
      <a class="button primary" href="/contact">Időpont egyeztetés Lizával</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .section {
    padding: 2.4rem 2rem 2.6rem;
    border-radius: 16px;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(224, 222, 217, 0.9);
    box-shadow: 0 1px 2px rgba(28, 32, 36, 0.12), 0 2px 8px rgba(28, 32, 36, 0.08);
  }

  .hero {
    margin-bottom: 1.8rem;
  }

  .hero-layout {
    display: grid;
    grid-template-columns: minmax(0, 1.1fr) minmax(0, 1fr);
    gap: 1.8rem;
    align-items: center;
  }

  .eyebrow {
    letter-spacing: 0.18em;
    text-transform: uppercase;
    font-size: 0.8rem;
    color: var(--color-muted);
    margin: 0 0 0.75rem;
  }

  h1 {
    margin: 0 0 0.8rem;
    font-size: 1.9rem;
  }

  .hero-image-shell {
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid rgba(224, 222, 217, 0.9);
    background: #fff;
    box-shadow: 0 1px 2px rgba(28, 32, 36, 0.14), 0 6px 14px rgba(28, 32, 36, 0.12);
  }

  .hero-image {
    display: block;
    width: 100%;
    height: auto;
  }

  .gallery {
    margin-top: 1.8rem;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 0.9rem;
  }

  .gallery-item {
    margin: 0;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid rgba(224, 222, 217, 0.9);
    background: #fff;
    box-shadow: 0 1px 2px rgba(28, 32, 36, 0.12), 0 4px 10px rgba(28, 32, 36, 0.1);
  }

  .gallery-item img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .section-footer {
    margin-top: 2rem;
    display: flex;
    justify-content: flex-end;
    gap: 0.8rem;
  }

  .button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.7rem 1.3rem;
    border-radius: 999px;
    border: 1px solid transparent;
    font-size: 0.9rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    font-weight: 600;
    cursor: pointer;
    transition: transform 160ms ease-out, box-shadow 160ms ease-out, background-color 160ms ease-out,
      border-color 160ms ease-out;
    text-decoration: none;
  }

  .button.primary {
    background: linear-gradient(to right, #c8a87a, #b4956b);
    color: #fff;
    box-shadow: 0 14px 32px rgba(142, 110, 67, 0.35);
  }

  .button.primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 18px 40px rgba(142, 110, 67, 0.42);
  }

  .button.subtle {
    background: transparent;
    border-color: rgba(108, 113, 117, 0.25);
    color: var(--color-muted);
  }

  .button.subtle:hover {
    border-color: rgba(108, 113, 117, 0.5);
    background: rgba(255, 255, 255, 0.7);
  }

  @media (max-width: 900px) {
    .hero-layout {
      grid-template-columns: minmax(0, 1fr);
    }

    .gallery-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 640px) {
    .section {
      padding-inline: 1.2rem;
    }

    .gallery-grid {
      grid-template-columns: minmax(0, 1fr);
    }
  }
</style>

